<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.5.7</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.taskforge</groupId>
	<artifactId>taskforge</artifactId>
	<version>0.1.0</version>
	<name>taskforge</name>
	<description>TaskForge project</description>
	<url/>
	<licenses>
		<license/>
	</licenses>
	<developers>
		<developer/>
	</developers>
	<scm>
		<connection/>
		<developerConnection/>
		<tag/>
		<url/>
	</scm>
	<properties>
		<java.version>21</java.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
  			<groupId>com.h2database</groupId>
  			<artifactId>h2</artifactId>
  			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-api</artifactId>
			<version>0.12.5</version>
		</dependency>
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-impl</artifactId>
			<version>0.12.5</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-jackson</artifactId>
			<version>0.12.5</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
		    <groupId>jakarta.validation</groupId>
		    <artifactId>jakarta.validation-api</artifactId>
		</dependency>
		<dependency>
    		<groupId>me.paulschwarz</groupId>
    		<artifactId>spring-dotenv</artifactId>
    		<version>4.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
			<version>2.3.0</version>
    	</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<release>21</release>
					<annotationProcessorPaths>
						<path>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
							<version>1.18.42</version>
						</path>
					</annotationProcessorPaths>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<mainClass>com.taskforge.TaskforgeApplication</mainClass>
					<excludes>
						<exclude>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
						</exclude>
					</excludes>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.12</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <excludes>
                        <exclude>**/dto/**</exclude>
                        <exclude>**/config/**</exclude>
                        <exclude>**/models/**</exclude>
                        <exclude>**/TaskforgeApplication.class</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <!-- âœ… Plugin pour la commande 'mvn coverage' -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>coverage-report</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>-c</argument>
                                <argument>
                                    echo "";
                                    echo "========================================";
                                    echo "ðŸ“Š CODE COVERAGE REPORT";
                                    echo "========================================";
                                    echo "";
                                    
                                    if [ ! -f "target/site/jacoco/jacoco.csv" ]; then
                                        echo "âŒ No coverage data found. Run 'mvn clean test' first.";
                                        exit 1;
                                    fi;
                                    
                                    # Rapport par package/classe
                                    awk -F',' '
                                    NR==1 { next }
                                    {
                                        package=$2;
                                        class=$3;
                                        instructions_missed=$4;
                                        instructions_covered=$5;
                                        branches_missed=$6;
                                        branches_covered=$7;
                                        lines_missed=$8;
                                        lines_covered=$9;
                                        
                                        instructions_total = instructions_missed + instructions_covered;
                                        lines_total = lines_missed + lines_covered;
                                        branches_total = branches_missed + branches_covered;
                                        
                                        if(instructions_total > 0) {
                                            instruction_pct = (instructions_covered / instructions_total) * 100;
                                            line_pct = (lines_covered / lines_total) * 100;
                                            branch_pct = branches_total > 0 ? (branches_covered / branches_total) * 100 : 0;
                                            
                                            # DÃ©terminer la couleur
                                            if(line_pct >= 80) color="\033[0;32m";      # Vert
                                            else if(line_pct >= 60) color="\033[0;33m"; # Jaune
                                            else color="\033[0;31m";                     # Rouge
                                            
                                            # Afficher la ligne
                                            printf "%s%-60s | Lines: %5.1f%% | Branches: %5.1f%% | Instructions: %5.1f%%\033[0m\n", 
                                                   color, package "." class, line_pct, branch_pct, instruction_pct;
                                            
                                            # Accumuler pour le rÃ©sumÃ© global
                                            total_instructions_missed += instructions_missed;
                                            total_instructions_covered += instructions_covered;
                                            total_lines_missed += lines_missed;
                                            total_lines_covered += lines_covered;
                                            total_branches_missed += branches_missed;
                                            total_branches_covered += branches_covered;
                                        }
                                    }
                                    END {
                                        total_instructions = total_instructions_missed + total_instructions_covered;
                                        total_lines = total_lines_missed + total_lines_covered;
                                        total_branches = total_branches_missed + total_branches_covered;
                                        
                                        instruction_pct = (total_instructions_covered / total_instructions) * 100;
                                        line_pct = (total_lines_covered / total_lines) * 100;
                                        branch_pct = total_branches > 0 ? (total_branches_covered / total_branches) * 100 : 0;
                                        
                                        print "";
                                        print "========================================";
                                        print "ðŸ“ˆ GLOBAL SUMMARY";
                                        print "========================================";
                                        printf "Lines Coverage       : %.1f%% (%d/%d)\n", line_pct, total_lines_covered, total_lines;
                                        printf "Branches Coverage    : %.1f%% (%d/%d)\n", branch_pct, total_branches_covered, total_branches;
                                        printf "Instructions Coverage: %.1f%% (%d/%d)\n", instruction_pct, total_instructions_covered, total_instructions;
                                        print "========================================";
                                        print "";
                                        printf "ðŸ“„ Full HTML report: \033[0;36mtarget/site/jacoco/index.html\033[0m\n";
                                        print "";
                                    }
                                    ' target/site/jacoco/jacoco.csv;
                                </argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>

</project>
